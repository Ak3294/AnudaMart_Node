<!-- profile-update -->
<script>
    $("#image").change(function () {
        displayPP(this, $("#preview-image"));
    });

    var addform = $("#addPagesForm");
    addform.submit(function (e) {
        e.preventDefault();

        // validation
        if ($("#title").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Title is required",
                position: "topRight",
            });
            return;
        }

        if ($("#editor").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Description is required",
                position: "topRight",
            });
            return;
        }
        var formData = new FormData(addform[0]);

        $.ajax({
            type: "POST",
            cache: false,
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/static-pages/add",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    setTimeout(function () {
                        window.location.href = "/admin/static-pages/list";
                    }, 1000);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    });
</script>

<script>
    function generateSlug(name) {
        return name
            .toLowerCase()
            .replace(/[^a-z0-9\s-]/g, "")
            .replace(/\s+/g, "-");
    }

    // Generate slug when product name is entered
    $("#title").on("input", function () {
        var slug = generateSlug($(this).val());
        $("#slug").val(slug);
    });
</script>
