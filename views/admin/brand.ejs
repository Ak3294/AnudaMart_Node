<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    var addform = $("#submitForm");
    addform.on("submit", submitFormHandler);

    function submitFormHandler(e) {
        e.preventDefault();
        var formData = getFormData(addform);
        // DO POST
        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/admin/brand/add",
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }
</script>
<script>
    $(document).on("click", "#edit_btn", function (e) {
        var data = $(this).attr("data-model");
        data = JSON.parse(data);
        const activeStatusId = "<%= activeStatus._id.toString() %>";

        $("#editid").val(data._id);
        $("#edit_name").val(data.name);
        $("#edit_status_id").prop(
            "checked",
            data.status_id._id === activeStatusId
        );
    });

    function getFormData($form) {
        var unindexed_array = $form.serializeArray();
        var indexed_array = {};

        $.map(unindexed_array, function (n, i) {
            indexed_array[n["name"]] = n["value"];
        });

        return indexed_array;
    }

    var editForm = $("#editForm");
    editForm.on("submit", function (e) {
        e.preventDefault();

        var formData = getFormData(editForm);
        var id = $("#editid").val();

        $.ajax({
            type: "POST",
            url: "/admin/brand/edit/" + id,
            contentType: "application/json",
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status === 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#editBrandModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    });
</script>

<script>
    //#region Delete Brand
    $(document).on("click", ".remove-item-btn", function () {
        currentDeleteId = $(this).data("id"); // Get the id of the brand to delete
    });

    $(document).on("click", "#delete-brand", function () {
        if (!currentDeleteId) {
            console.error("No brand ID set for deletion.");
            return;
        }
        $.ajax({
            type: "POST",
            url: "/admin/brand/delete/" + currentDeleteId,
            success: function (response) {
                iziToast.success({
                    title: "Deleted",
                    message: "Brand deleted successfully!",
                    position: "topRight",
                });
                setTimeout(function () {
                    location.reload();
                }, 1000);
            },
            error: function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText || "Failed to delete brand!",
                    position: "topRight",
                });
            },
        });
    });
