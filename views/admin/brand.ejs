<%- include('partials/footer.ejs') %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#addBrandForm").on("submit", function (event) {
            event.preventDefault();

            const name = $("#customername-field").val();
            const status = $("#status-field").val();

            $.ajax({
                type: "POST",
                url: "/admin/brand/add", // Adjust URL based on your routes
                contentType: "application/json",
                data: JSON.stringify({ name, status }),
            })
                .done((res) => {
                    if (res.status == 200) {
                        iziToast.success({
                            title: "Success",
                            message: res.message,
                            position: "topRight",
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1000);
                    } else {
                        iziToast.error({
                            title: "Error",
                            message: res.message,
                            position: "topRight",
                        });
                    }
                })
                .fail(function (xhr, status, error) {
                    iziToast.error({
                        title: "Error",
                        message: xhr.responseText,
                        position: "topRight",
                    });
                    setTimeout(function () {
                        location.reload();
                    }, 1000);
                });
        });
    });

    $(document).on("click", ".edit-item-btn", function () {
        currentEditRow = $(this).closest("tr"); // Track the row being edited
        const id = currentEditRow.data("id");
        const name = currentEditRow.find(".customer-name-elem").text().trim();
        const status = currentEditRow.find(".status span").text().trim();

        $("#edit-id-field").val(id);
        $("#edit-customername-field").val(name);
        $("#edit-status-field").val(status);

        $("#editBrandModal").modal("show"); // Show the modal
    });

    $("#edit-brand-btn").on("click", function () {
        const id = $("#edit-id-field").val();
        const name = $("#edit-customername-field").val();
        const status = $("#edit-status-field").val();

        $.ajax({
            type: "POST",
            url: "/admin/brand/edit/" + id,
            contentType: "application/json",
            data: JSON.stringify({ name, status }),
            success: function (response) {
                iziToast.success({
                    title: "Success",
                    message: "Brand updated successfully!",
                    position: "topRight",
                });

                // Update the row in the table
                currentEditRow.find(".customer-name-elem").text(name);
                currentEditRow.find(".status span").text(status);

                setTimeout(function () {
                    location.reload(); // Reload to reflect changes
                }, 1000);
            },
            error: function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText || "Failed to update brand!",
                    position: "topRight",
                });
            },
        });
    });

    // Delete Brand AJAX

    $(document).on("click", ".remove-item-btn", function () {
        currentDeleteId = $(this).data("id"); // Get the id of the brand to delete
    });

    $(document).on("click", "#delete-brand", function () {
        if (!currentDeleteId) return; // Check if currentDeleteId is defined

        $.ajax({
            type: "DELETE",
            url: "/admin/brand/delete/" + currentDeleteId,
            success: function (response) {
                iziToast.success({
                    title: "Deleted",
                    message: "Brand deleted successfully!",
                    position: "topRight",
                });
                setTimeout(function () {
                    location.reload();
                }, 1000);
            },
            error: function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText || "Failed to delete brand!",
                    position: "topRight",
                });
            },
        });
    });
</script>
