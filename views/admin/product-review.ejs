<script>
    function filterData() {
        // Get the selected values from the dropdowns
        const status = document.getElementById("ratingStatus").value;
        const rating = document.getElementById("rating").value;

        // Prepare the request payload
        const filterParams = {
            status: status !== "all" ? status : "",
            rating: rating !== "all" ? parseFloat(rating) : "",
        };

        $.ajax({
            type: "POST",
            url: "/admin/product-review/filter",
            contentType: "application/json",
            data: JSON.stringify(filterParams),
            success: function (response) {
                // Assuming the response contains the filtered ratings
                console.log(response);
                renderTableData(response.ratings);
            },
            error: function (error) {
                console.error("Error fetching filtered data:", error);
            },
        });
    }

    function renderTableData(ratings) {
        const tableBody = document.getElementById("ratingsTableBody");

        // Clear existing table rows
        tableBody.innerHTML = "";

        // Check if there are any ratings to display
        if (!ratings[0]) {
            // Render "No Data" row if there are no ratings
            tableBody.innerHTML = `
        <tr>
          <td colspan="100%" class="text-center">No Data</td>
        </tr>
      `;
            return;
        }

        // Iterate over each rating and render table rows
        ratings.forEach((rating) => {
            const row = `
        <tr>
          <td>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="chk_child" value="${
                  rating._id
              }" />
              <label class="form-check-label"></label>
            </div>
          </td>
          <td class="name">
            ${rating.user_id?.first_name || ""}
          </td>
          <td class="products">
            ${rating.product_id ? rating.product_id.product_name : ""}
          </td>
          <td class="review-image">
            <div class="avatar-xs bg-light rounded p-1 me-2">
              <img src="${
                  rating.image
                      ? `../../dist/ratings/${rating.image}`
                      : "../../assets/images/default/mart-demo-img.jpg"
              }" 
                   onerror="this.src='../../assets/images/default/mart-demo-img.jpg';" 
                   class="img-fluid d-block" />
            </div>
          </td>
          <td class="product-image">
            <span class="badge bg-success-subtle text-success fs-8">
              <i class="ph ph-star-fill me-1 fs-8"></i>
              <span>${rating.rating || ""}</span>
            </span>
          </td>
          <td class="comments">
            ${rating.comment || ""}
          </td>
          <td>
            <span class="badge bg-success-subtle text-success">
              ${rating.status_id ? rating.status_id.name : "No Status"}
            </span>
          </td>
        </tr>
      `;

            // Append the row to the table body
            tableBody.insertAdjacentHTML("beforeend", row);
        });
    }
</script>

<script>
    // Function to toggle the visibility of action buttons based on selected checkboxes
    function toggleActionButtons() {
        const checkboxes = document.getElementsByName("chk_child");
        const checkedBoxes = Array.from(checkboxes).filter(
            (checkbox) => checkbox.checked
        );

        const showButton = document.querySelector(".show-status");
        const hideButton = document.querySelector(".hide-status");

        if (checkedBoxes.length > 0) {
            showButton.classList.remove("d-none");
            hideButton.classList.remove("d-none");
        } else {
            showButton.classList.add("d-none");
            hideButton.classList.add("d-none");
        }
    }

    // Attach the event listener to each checkbox
    document.querySelectorAll('input[name="chk_child"]').forEach((checkbox) => {
        checkbox.addEventListener("change", toggleActionButtons);
    });
</script>

<script>
    function showMultiple() {
        const ids_array = [];
        const checkboxes = document.getElementsByName("chk_child");

        for (let i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                const ratingID = checkboxes[i].value;
                ids_array.push(ratingID);
            }
        }

        if (ids_array.length > 0) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn btn-primary w-xs me-2 mt-2",
                cancelButtonClass: "btn btn-danger w-xs mt-2",
                confirmButtonText: "Yes, Show the Status!",
                buttonsStyling: false,
                showCloseButton: true,
            }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        type: "POST",
                        contentType: "application/json",
                        url: "/admin/product-review/show",
                        data: JSON.stringify({
                            ids: ids_array,
                        }),
                    })
                        .done((res) => {
                            if (res.status == 200) {
                                iziToast.success({
                                    title: "Success",
                                    message: res.message,
                                    position: "topRight",
                                });
                                setTimeout(function () {
                                    location.reload();
                                }, 1000);
                            } else {
                                iziToast.error({
                                    title: "Error",
                                    message: res.message,
                                    position: "topRight",
                                });
                            }
                        })
                        .fail(function (xhr, status, error) {
                            iziToast.error({
                                title: "Error",
                                message: xhr.responseText,
                                position: "topRight",
                            });
                        });
                }
            });
        } else {
            Swal.fire({
                title: "Please select at least one checkbox",
                confirmButtonClass: "btn btn-info",
                buttonsStyling: false,
                showCloseButton: true,
            });
        }
    }

    function hideMultiple() {
        const ids_array = [];
        const checkboxes = document.getElementsByName("chk_child");

        for (let i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                const ratingID = checkboxes[i].value;
                ids_array.push(ratingID);
            }
        }

        if (ids_array.length > 0) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn btn-primary w-xs me-2 mt-2",
                cancelButtonClass: "btn btn-danger w-xs mt-2",
                confirmButtonText: "Yes, Hide the Status!",
                buttonsStyling: false,
                showCloseButton: true,
            }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        type: "POST",
                        contentType: "application/json",
                        url: "/admin/product-review/hide",
                        data: JSON.stringify({
                            ids: ids_array,
                        }),
                    })
                        .done((res) => {
                            if (res.status == 200) {
                                iziToast.success({
                                    title: "Success",
                                    message: res.message,
                                    position: "topRight",
                                });
                                setTimeout(function () {
                                    location.reload();
                                }, 1000);
                            } else {
                                iziToast.error({
                                    title: "Error",
                                    message: res.message,
                                    position: "topRight",
                                });
                            }
                        })
                        .fail(function (xhr, status, error) {
                            iziToast.error({
                                title: "Error",
                                message: xhr.responseText,
                                position: "topRight",
                            });
                        });
                }
            });
        } else {
            Swal.fire({
                title: "Please select at least one checkbox",
                confirmButtonClass: "btn btn-info",
                buttonsStyling: false,
                showCloseButton: true,
            });
        }
    }
</script>
