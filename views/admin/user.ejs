<script>
    //#region Add User
    var addform = $("#addUserForm");
    addform.on("submit", submitFormHandler);

    function submitFormHandler(e) {
        e.preventDefault();

        function getFormData(form) {
            var formData = {};
            form.serializeArray().forEach(function (field) {
                formData[field.name] = field.value;
            });
            return formData;
        }

        var formData = getFormData(addform);

        // DO POST
        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/admin/user/add",
            data: JSON.stringify(formData),
            success: function (res) {
                iziToast.success({
                    title: "Success",
                    message: res.message,
                    position: "topRight",
                });
                $("#showUserModal").modal("hide");
                setTimeout(function () {
                    location.reload();
                }, 500);
            },
            error: function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            },
        });
    }
    //#endregion Add User

    //# View Orders of user/customer region start
    let UserIdToView;
    $(document).ready(function(){
        $('#viewOrders').on('click', function() {
            var UserIdToView = $(this).data("id");
            console.log(UserIdToView)

            // AJAX request to view orders 
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/admin/order/view" + UserIdToView,
            })
                .done((res) => {
                    if (res.status == 200) {
                        iziToast.success({
                            title: "Success",
                            message: res.message,
                            position: "topRight",
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1000);
                    } else {
                        iziToast.error({
                            title: "Error",
                            message: res.message,
                            position: "topRight",
                        });
                    }
                })
                .fail(function (xhr, status, error) {
                    iziToast.error({
                        title: "Error",
                        message: xhr.responseText,
                        position: "topRight",
                    });
                });
        })
    })


    //# View Orders of user/customer region end

    //#region starts Edit User
    $("#image").change(function () {
        displayPP(this, $("#edituserimage-preview"));
    });

    // Fill form fields with data when the edit button is clicked
    $(document).on("click", "#edit_btn", function (e) {
        var data = $(this).attr("data-model");
        data = JSON.parse(data);

        // Set the image URL based on whether the image exists in the folder
        var imageUrl = "../../dist/users/" + data.image;
        var defaultImageUrl = "../../assets/images/default/user-dummy-img.jpg";

        // Check if the image exists by trying to load it
        var img = new Image();
        img.onload = function () {
            $("#edituserimage-preview").attr("src", imageUrl);
        };
        img.onerror = function () {
            $("#edituserimage-preview").attr("src", defaultImageUrl);
        };
        img.src = imageUrl;

        $("#editid").val(data._id);
        $("#edit_first_name").val(data.first_name);
        $("#edit_last_name").val(data.last_name);
        $("#edit_email").val(data.email);
        $("#edit_phone").val(data.phone);
        $("#edit_dob").val(data.dob);
        $("#edit_address").val(data.address);
        $("#edit_additional_info").val(data.additional_info);
        $("#edit_pincode").val(data.pincode);
    });

    var editform = $("#editform");
    editform.on("submit", editSubmitHandler);

    function editSubmitHandler(e) {
        e.preventDefault();

        var formData = new FormData(this);

        $.ajax({
            type: "POST",
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/user/edit",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showEditModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }

    //#endregion Edit User

    // #editregion Delete User
    let UserIdToDelete;
