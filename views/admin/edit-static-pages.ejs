<!-- script for fill data in editProductForm -->
<script>
    $(document).ready(function () {
        const page = JSON.parse(
            '<%- JSON.stringify(page)
            .replace(/\\/g, "\\\\")
            .replace(/'/g, "\\'")
            .replace(/\\n/g, "\\n")
            .replace(/\\r/g, "\\r")
            .replace(/\\t/g, "\\t")
            .replace(/\\f/g, "\\f")
            .replace(/<\/script>/g, "<\\/script>")%>' // Handle double quotes as well
        );

        const activeStatusId = "<%= activeStatus._id.toString() %>";
        var imageUrl = "/dist/pages/" + page.image;
        var defaultImageUrl =
            "../../../assets/images/default/mart-demo-img.jpg";

        // Function to check if the image exists
        function imageExists(url, callback) {
            $.ajax({
                url: url,
                type: "HEAD",
                success: function () {
                    callback(true);
                },
                error: function () {
                    callback(false);
                },
            });
        }
        if (page.image) {
            imageExists(imageUrl, function (exists) {
                if (exists) {
                    $("#display_preview_image").attr("src", imageUrl);
                } else {
                    $("#display_preview_image").attr(
                        "src",
                        defaultImageUrl
                    );
                }
            });
        } else {
            $("#display_preview_image").attr("src", defaultImageUrl);
        }

        // Fill form fields with existing data
        $("#title").val(page.title);
        $("#meta_title").val(page.meta_title);
        $("#meta_description").val(page.meta_description);
        $("#meta_keywords").val(page.meta_keywords);
        $("#slug").val(page.slug);
        $("#idShowIn").val(page.show_in);
        $("#status_id").prop(
            "checked",
            page.status_id.toString() === activeStatusId
        );
    });
</script>

<!-- profile-update -->
<script>
    $("#image").change(function () {
        displayPP(this, $("#preview-image"));
    });
    var editform = $("#editPagesForm");
    editform.submit(function (e) {
        e.preventDefault();
        var formData = new FormData(editform[0]);
        $.ajax({
            type: "POST",
            cache: false,
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/static-pages/edit",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    setTimeout(function () {
                        window.location.href = "/admin/static-pages/list";
                    }, 1000);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    });
</script>

<script>
    function generateSlug(name) {
        return name
            .toLowerCase()
            .replace(/[^a-z0-9\s-]/g, "")
            .replace(/\s+/g, "-");
    }

    // Generate slug when product name is entered
    $("#title").on("input", function () {
        var slug = generateSlug($(this).val());
        $("#slug").val(slug);
    });
</script>
