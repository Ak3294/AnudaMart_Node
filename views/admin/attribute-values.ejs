<%- include('partials/footer.ejs') %>

<script>
    var addform = $("#submitForm");
    addform.on("submit", submitFormHandler);
    function submitFormHandler(e) {
        e.preventDefault();
        var formData = getFormData(addform);
        // DO POST
        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/admin/attribute-values/add",
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }

    $(document).on("click", "#edit_btn", function (e) {
        var data = $(this).attr("data-model");
        attribute_values = JSON.parse(data);
        // Filling form fields with data according to the model
        $("#editIdField").val(attribute_values._id);
        $("#edit_attribute_title").val(attribute_values.attribute_sets_id._id);
        $("#edit_attribute_value").val(attribute_values.value);
    });

    function getFormData($form) {
        var unindexed_array = $form.serializeArray();
        var indexed_array = {};

        $.map(unindexed_array, function (n, i) {
            indexed_array[n["name"]] = n["value"];
        });

        return indexed_array;
    }

    var editform = $("#editform");
    editform.on("submit", editSubmitHandler);

    function editSubmitHandler(e) {
        e.preventDefault();

        var formData = getFormData(editform);

        $.ajax({
            type: "POST",
            url: "/admin/attribute-values/edit",
            contentType: "application/json",
            processData: false,
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showEditModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }

    // #region end Edit attributes values

    //#region Delete attribute-values
    let idToDelete;
    $(document).ready(function () {
        // Show the modal and store the attribute-values ID to delete
        $(".remove-item-btn").click(function () {
            idToDelete = $(this).data("id");
        });

        // AJAX request to delete the attribute-values
        $("#delete-record").click(function () {
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/admin/attribute-values/delete/" + idToDelete,
            })
                .done((res) => {
                    if (res.status == 200) {
                        iziToast.success({
                            title: "Success",
                            message: res.message,
                            position: "topRight",
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1000);
                    } else {
                        iziToast.error({
                            title: "Error",
                            message: res.message,
                            position: "topRight",
                        });
                    }
                })
                .fail(function (xhr, status, error) {
                    iziToast.error({
                        title: "Error",
                        message: xhr.responseText,
                        position: "topRight",
                    });
                });
        });
    });
    //#endregion Delete attribute-values
</script>
