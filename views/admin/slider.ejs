<%- include('partials/footer.ejs') %>
<script>
    //#region Add Slider
    var addformSlider = $("#addSliderForm");
    addformSlider.on("submit", submitFormHandler);

    function submitFormHandler(e) {
        e.preventDefault();

        var formData = new FormData(addformSlider[0]);

        // Validation
        if ($("#title").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Title is required",
                position: "topRight",
            });
            return false;
        }

        if ($("#image-input").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Image is required",
                position: "topRight",
            });
            return false;
        }

        // DO POST
        $.ajax({
            type: "POST",
            cache: false,
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/slider/add",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }
    //#endregion Add Slider

    //#region starts Edit Slider
    $("#editimage").change(function () {
        displayPP(this, $("#editimage-preview"));
    });

    $(document).on("click", "#edit_btn", function (e) {
        var data = $(this).attr("data-model");
        data = JSON.parse(data);
        const activeStatusId = "<%= activeStatus._id.toString() %>";

        // Set the image URL based on whether the image exists in the folder
        var imageUrl = "../../dist/slider/" + data.image;
        var defaultImageUrl = "../../assets/images/default/mart-demo-img.jpg";

        // Check if the image exists by trying to load it
        var img = new Image();
        img.onload = function () {
            $("#editimage-preview").attr("src", imageUrl);
        };
        img.onerror = function () {
            $("#editimage-preview").attr("src", defaultImageUrl);
        };
        img.src = imageUrl;

        $("#editid").val(data._id);
        $("#edit_title").val(data.title);
        $("#edit_url").val(data.url);
        $("#edit_status_id").prop(
            "checked",
            data.status_id._id == activeStatusId
        );
        $("#edit_description").val(data.description);
    });

    var editform = $("#editform");
    editform.on("submit", editSubmitHandler);

    function editSubmitHandler(e) {
        e.preventDefault();

        // Validation
        if ($("#edit_title").val() == "") {
            iziToast.error({
                title: "Error",
                message: "Title is required",
                position: "topRight",
            });
            return false;
        }

        // Prepare form data
        var formData = new FormData(this);

        // Perform AJAX request
        $.ajax({
            type: "POST",
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/slider/edit",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showEditModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }

    //#endregion Edit Slider

    //#region Delete Slider
    let SliderIdToDelete;
    $(document).ready(function () {
        // Show the modal and store the Slider ID to delete
        $(".remove-item-btn").click(function () {
            SliderIdToDelete = $(this).data("id");
        });

        // AJAX request to delete the Slider
        $("#delete-record").click(function () {
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/admin/slider/delete/" + SliderIdToDelete,
            })
                .done((res) => {
                    if (res.status == 200) {
                        iziToast.success({
                            title: "Success",
                            message: res.message,
                            position: "topRight",
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1000);
                    } else {
                        iziToast.error({
                            title: "Error",
                            message: res.message,
                            position: "topRight",
                        });
                    }
                })
                .fail(function (xhr, status, error) {
                    iziToast.error({
                        title: "Error",
                        message: xhr.responseText,
                        position: "topRight",
                    });
                });
        });
    });
    //#endregion Delete Slider
</script>
