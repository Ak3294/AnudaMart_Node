<script>
    //#region Add Attributes set
    var addform = $("#submitForm");
    addform.on("submit", submitFormHandler);
    function submitFormHandler(e) {
        e.preventDefault();

        var categoryIds = $(this).find('select[name="category_id"]').val();

        var formData = getFormData(addform);
        formData.category_id = categoryIds;

        // DO POST
        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/admin/attribute/add",
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }
    //#endregion Add Attributes set

    //#region Edit Attributes set
    $(document).on("click", "#edit_btn", function (e) {
        var data = $(this).attr("data-model");
        attributes = JSON.parse(data);

        $("#editid").val(attributes._id);
        $("#edit_title").val(attributes.title);
        // Populate multi-select for categories
        var categoryIds = attributes.category_id.map(
            (category) => category._id
        );
        $("#edit_category").val(categoryIds);
    });

    function getFormData($form) {
        var unindexed_array = $form.serializeArray();
        var indexed_array = {};

        $.map(unindexed_array, function (n, i) {
            indexed_array[n["name"]] = n["value"];
        });

        return indexed_array;
    }
    var editform = $("#editform");
    editform.on("submit", editSubmitHandler);

    function editSubmitHandler(e) {
        e.preventDefault();
        var categoryIds = $(this).find('select[name="category_id"]').val();

        var formData = getFormData(editform);
        formData.category_id = categoryIds;
        $.ajax({
            type: "POST",
            url: "/admin/attribute/edit",
            contentType: "application/json",
            processData: false,
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showEditModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }
    //#endregion Edit Attributes set

    //#region Delete attribute-sets
    let idToDelete;
    $(document).ready(function () {
        // Show the modal and store the status ID to delete
        $(".remove-item-btn").click(function () {
            idToDelete = $(this).data("id");
        });

        // AJAX request to delete the status
        $("#delete-record").click(function () {
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/admin/attribute/delete/" + idToDelete,
            })
                .done((res) => {
                    if (res.status == 200) {
                        iziToast.success({
                            title: "Success",
                            message: res.message,
                            position: "topRight",
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1000);
                    } else {
                        iziToast.error({
                            title: "Error",
                            message: res.message,
                            position: "topRight",
                        });
                    }
                })
                .fail(function (xhr, status, error) {
                    iziToast.error({
                        title: "Error",
                        message: xhr.responseText,
                        position: "topRight",
                    });
                });
        });
    });
    //#endregion Delete attribute-sets
</script>
