<script>
    //#region Add Category
    var addformCategory = $("#addCategoryForm");
    addformCategory.on("submit", submitFormHandler);

    function submitFormHandler(e) {
        e.preventDefault();

        // Validation
        if ($("#name").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Category Name is required",
                position: "topRight",
            });
            return;
        }
        if ($("#slug").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Slug is required",
                position: "topRight",
            });
            return;
        }

        var formData = new FormData(addformCategory[0]);
        // DO POST
        $.ajax({
            type: "POST",
            cache: false,
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/category/add",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }
    //#endregion Add Category

    //#region starts Edit Category
    $("#editicon").change(function () {
        displayPP(this, $("#editimage-preview"));
    });

    $(document).on("click", "#edit_btn", function (e) {
        var data = $(this).attr("data-model");
        data = JSON.parse(data);
        const activeStatusId = "<%= activeStatus._id.toString() %>";

        // Assuming 'data.icon' may or may not be defined
        var imageUrl = data.icon
            ? "/dist/category/" + data.icon
            : "../../assets/images/default/mart-demo-img.jpg";
        $("#editimage-preview").attr("src", imageUrl);

        $("#editid").val(data._id);
        $("#edit_name").val(data.name);
        $("#edit_parent_id").val(data.parent_id ? data.parent_id._id : "");
        $("#edit_slug").val(data.slug);
        $("#edit_status_id").prop(
            "checked",
            data.status_id._id == activeStatusId
        );
        $("#edit_meta_title").val(data.meta_title);
        $("#edit_meta_description").val(data.meta_description);
        // $("#edit_commission_type").val(data.commission_type);
        $("#edit_commission").val(data.commission);
        $("#edit_is_featured").prop("checked", data.is_featured);
        $("#edit_editor").val(data.description);
    });

    var editform = $("#editform");
    editform.on("submit", editSubmitHandler);

    function editSubmitHandler(e) {
        e.preventDefault();

        // Validation
        if ($("#edit_name").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Category Name is required",
                position: "topRight",
            });
            return;
        }

        if ($("#edit_slug").val() == "") {
            iziToast.warning({
                title: "Warning",
                message: "Slug is required",
                position: "topRight",
            });
            return;
        }

        // Prepare form data
        var formData = new FormData(this);

        // Perform AJAX request
        $.ajax({
            type: "POST",
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/category/edit",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showEditModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }

    //#endregion Edit Category

    //#region Delete Category
    let categoryIdToDelete;
    $(document).ready(function () {
        // Show the modal and store the category ID to delete
        $(".remove-item-btn").click(function () {
            categoryIdToDelete = $(this).data("id");
        });

        // AJAX request to delete the category
        $("#delete-record").click(function () {
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/admin/category/delete/" + categoryIdToDelete,
            })
                .done((res) => {
                    if (res.status == 200) {
                        iziToast.success({
                            title: "Success",
                            message: res.message,
                            position: "topRight",
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 500);
                    } else {
                        iziToast.error({
                            title: "Error",
                            message: res.message,
                            position: "topRight",
                        });
                    }
                })
                .fail(function (xhr, status, error) {
                    iziToast.error({
                        title: "Error",
                        message: xhr.responseText,
                        position: "topRight",
                    });
                });
        });
    });
    //#endregion Delete Category
</script>

<script>
    function generateSlug(name) {
        return name
            .toLowerCase()
            .replace(/[^a-z0-9\s-]/g, "")
            .replace(/\s+/g, "-");
    }

    // Generate slug when name is entered
    $("#name").on("input", function () {
        var slug = generateSlug($(this).val());
        $("#slug-field").val(slug);
    });

    // Generate slug when name is entered
    $("#edit_name").on("input", function () {
        var slug = generateSlug($(this).val());
        $("#edit_slug").val(slug);
    });
</script>
