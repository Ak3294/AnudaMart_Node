<script>
    //#region Add Category
    var addformCategory = $("#addCategoryForm");
    addformCategory.on("submit", submitFormHandler);

    function submitFormHandler(e) {
        e.preventDefault();

        var formData = new FormData(addformCategory[0]);
        console.log(formData);
        // DO POST
        $.ajax({
            type: "POST",
            cache: false,
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/category/add",
            data: formData,
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    setTimeout(function () {
                        location.reload();
                    }, 1000);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
                setTimeout(function () {
                        location.reload();
                    }, 1000);
            });
    }
    //#endregion Add Category

    //#region Edit Category
    $(document).on("click", "#edit_btn", function (e) {
        // var row = $(this).closest("tr");
        // var data = table.row(row).data();
        // console.log("data", data);
        $("#editid").val(data._id);
        $("#editform").find("#edit_student_id").val(data.student_id);
        $("#editform").find("#edit_assign_teacher").val(data.assign_teacher);
        $("#editform").find("#edit_meeting_id").val(data.meeting_id);
        $("#editform")
            .find("#edit_meeting_password")
            .val(data.meeting_password);
        $("#editform").find("#edit_date").val(data.date);
        $("#editform").find("#edit_time").val(data.time);
    });

    var editform = $("#editform");
    editform.on("submit", editSubmitHandler);

    function editSubmitHandler(e) {
        e.preventDefault();

        let data = {
            student_id: $("#editform").find("#edit_student_id").val(),
            assign_teacher: $("#editform").find("#edit_assign_teacher").val(),
            meeting_id: $("#editform").find("#edit_meeting_id").val(),
            meeting_password: $("#editform")
                .find("#edit_meeting_password")
                .val(),
            date: $("#editform").find("#edit_date").val(),
            time: $("#editform").find("#edit_time").val(),
