            );
        }
    });

    function loadImage(url, selector, defaultImageUrl) {
        const img = new Image();
        img.onload = function () {
            $(selector).attr("src", url);
        };
        img.onerror = function () {
            $(selector).attr("src", defaultImageUrl);
        };
        img.src = url;
    }
