<script>
    // Initialize the form
    var addBannerform = $("#addBannerForm");
    addBannerform.on("submit", submitFormHandler);

    // Function to handle form submission
    function submitFormHandler(e) {
        e.preventDefault();

        if (
            !$("#home_banner_top_image").get(0).files.length &&
            !$("#home_banner_top_image_existing").val().trim()
        ) {
            iziToast.warning({
                title: "Warning",
                message: "Home Banner (Top) is required",
                position: "topRight",
            });
            return false;
        }

        if (
            !$("#home_banner_2_image").get(0).files.length &&
            !$("#home_banner_2_image_existing").val().trim()
        ) {
            iziToast.warning({
                title: "Warning",
                message: "Home Banner 2 is required",
                position: "topRight",
            });
            return;
        }
        if (
            !$("#home_banner_3_image").get(0).files.length &&
            !$("#home_banner_3_image_existing").val().trim()
        ) {
            iziToast.warning({
                title: "Warning",
                message: "Home Banner 3 is required",
                position: "topRight",
            });
            return;
        }
        if (
            !$("#home_banner_4_image").get(0).files.length &&
            !$("#home_banner_4_image_existing").val().trim()
        ) {
            iziToast.warning({
                title: "Warning",
                message: "Home Banner 4 is required",
                position: "topRight",
            });
            return;
        }
        if (
            !$("#subscription_banner_image").get(0).files.length &&
            !$("#subscription_banner_image_existing").val().trim()
        ) {
            iziToast.warning({
                title: "Warning",
                message: "Subscription Banner is required",
                position: "topRight",
            });
            return;
        }

        if ($("#home_banner_top_url").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Top Banner URL is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_2_url").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home URL 2 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_3_url").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home URL 3 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_4_url").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home URL 4 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#subscription_banner_url").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Subscription URL is required",
                position: "topRight",
            });
            return;
        }

        if ($("#home_banner_top_title").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Top Banner Title is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_2_title").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home Title 2 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_3_title").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home Title 3 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_4_title").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home Title 4 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#subscription_banner_title").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Subscription Title is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_top_description").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Top Banner Description is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_2_description").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home Description 2 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_3_description").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home Description 3 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#home_banner_4_description").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Home Description 4 is required",
                position: "topRight",
            });
            return;
        }
        if ($("#subscription_banner_description").val().trim() === "") {
            iziToast.warning({
                title: "Warning",
                message: "Subscription Description is required",
                position: "topRight",
            });
            return;
        }

        var formData = new FormData(addBannerform[0]);

        // AJAX POST request
        $.ajax({
            type: "POST",
            cache: false,
            enctype: "multipart/form-data",
            processData: false,
            contentType: false,
            url: "/admin/banner/add",
            data: formData,
        })
            .done((res) => {
                if (res.status === 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });

                    // Reload the page after a short delay
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }

