<script>
    $(document).ready(function () {
        const product = JSON.parse(
            `<%- JSON.stringify(product).replace(/\\/g, '\\\\').replace(/"/g, '\\"') %>`
        );

        const productStock = JSON.parse(
            `<%- JSON.stringify(productStock).replace(/\\/g, '\\\\').replace(/"/g, '\\"') %>`
