        $.ajax({
            url: "/seller/product/get-attribute-values",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(jsonData),
            success: function (attributeValues) {
                attValDrpdwnContainer.innerHTML = attributeValues;
