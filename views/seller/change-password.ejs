<script>
    const form = $("#passwordForm");
    form.on("submit", submitHandler);
    function submitHandler(e) {
        e.preventDefault();

        // PREPARE FORM DATA
        var formData = {
            oldpassword: $("#oldpassword-input").val(),
            newpassword: $("#newpassword-input").val(),
            confirmpassword: $("#confirm-password-input").val(),
        };
        if (formData.newpassword != formData.confirmpassword) {
            iziToast.error({
                title: "Error",
                message: "New Password & Confirm Password do not match.",
                position: "topRight",
            });
            return;
        }
        // DO POST
        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/seller/changepassword",
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    setTimeout(function () {
                        window.location.href = "/seller/dashboard";
                    }, 1000);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }
</script>
