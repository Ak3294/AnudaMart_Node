<script>
    var addform = $("#submitForm");
    addform.on("submit", submitFormHandler);

    function submitFormHandler(e) {
        e.preventDefault();

        //validation
        if ($("#name-field").val()== "") {
            iziToast.warning({
                title: "Warning",
                message: "Please enter request category",
                position: "topRight",
            });
            return;
        }
        var formData = getFormData(addform);
        // DO POST
        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/seller/category/request-add",
            data: JSON.stringify(formData),
        })
            .done((res) => {
                if (res.status == 200) {
                    iziToast.success({
                        title: "Success",
                        message: res.message,
                        position: "topRight",
                    });
                    $("#showModal").modal("hide");
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    iziToast.error({
                        title: "Error",
                        message: res.message,
                        position: "topRight",
                    });
                }
            })
            .fail(function (xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }

    //#region Delete Category
    let categoryIdToDelete;
    $(document).ready(function () {
        // Show the modal and store the category ID to delete
        $(".remove-item-btn").click(function () {
            categoryIdToDelete = $(this).data("id");
        });

        // AJAX request to delete the category
        $("#delete-record").click(function () {
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/seller/category/request-delete/" + categoryIdToDelete,
            })
                .done((res) => {
                    if (res.status == 200) {
                        iziToast.success({
                            title: "Success",
                            message: res.message,
                            position: "topRight",
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 500);
                    } else {
                        iziToast.error({
                            title: "Error",
                            message: res.message,
                            position: "topRight",
                        });
                    }
                })
                .fail(function (xhr, status, error) {
                    iziToast.error({
                        title: "Error",
                        message: xhr.responseText,
                        position: "topRight",
                    });
                });
        });
    });
    //#endregion Delete Category
</script>
